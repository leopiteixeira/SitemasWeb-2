@model IEnumerable<TP02.Models.BL>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de BLs</h1>

<p>
    <a asp-action="Create" asp-controller="BLs">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Consignee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Navio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consignee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Navio)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="BLs" asp-route-id="@item.BlId">Edit</a> |
                    <a asp-action="Details" asp-controller="BLs" asp-route-id="@item.BlId">Details</a> |
                    <a asp-action="Delete" asp-controller="BLs" asp-route-id="@item.BlId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>